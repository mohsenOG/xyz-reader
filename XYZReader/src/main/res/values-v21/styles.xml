<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bacon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/amber_500</item>
        <item name="colorPrimaryDark">@color/amber_700</item>
        <item name="colorAccent">@color/blue_a700</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/transition_article</item>
        <item name="android:windowExitTransition">@transition/transition_article</item>
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>